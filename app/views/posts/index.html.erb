<h1>Posts</h1>

<p>
  <%= link_to "New Post", new_post_path %>
</p>

<hr>

<% @posts.each do |post| %>
  <div>
    <h2>
      <%= link_to post.title, post %>
    </h2>

    <p>
      <%= truncate(post.body, length: 100) %>
    </p>

    <p>
      <%= link_to "Edit", edit_post_path(post) %> |
      <%= link_to "Delete", post, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </p>

    <hr>
  </div>
<% end %>
