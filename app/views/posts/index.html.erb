<h1>Posts</h1>

<p>
  <%= link_to "New Post", new_post_path %>
</p>

<hr>

<% @posts.each do |post| %>

  <%= render "post", post: post, truncate_body: true %>

  <p>
    <%= link_to "Show", post %> |
    <%= link_to "Edit", edit_post_path(post) %> |
    <%= link_to "Delete", post,
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </p>

  <hr>

<% end %>
