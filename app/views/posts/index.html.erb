<h1>Posts</h1>

<p>
  <%= link_to "New Post", new_post_path %>
</p>




<hr>

<% @posts.each do |post| %>
  <%= render "post", post: post, truncate_body: true %>
 

<%= link_to "Show", post %>

<% if user_signed_in? && post.user == current_user %>
  | <%= link_to "Edit", edit_post_path(post) %> |
  <%= link_to "Delete", post,
        data: {
          turbo_method: :delete,
          turbo_confirm: "本当に削除しますか？"
        } %>
<% end %>
 <hr>
<% end %>
